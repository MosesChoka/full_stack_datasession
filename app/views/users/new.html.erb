<% provide(:title, "Signup") %>
<section class="user-signup-page">

<div class="font-bold">
  <br>
  <br>
  <br>
  <h3 class="font-bold">Sign Up</h3>
</div>

<div class="signup-form">
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder:"Enter name", class:"form-input1" %>
      <br>
      <br>
      <%= f.label :email %>
      <%= f.email_field :email, placeholder:"email@example.com", class:"form-input1"%>
      <br>
      <br>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder:"enter password", class:"form-input1" %>
      <br>
      <br>
      <%= f.label :password, "Password Confirmation" %>
      <%= f.password_field :password, placeholder:"confirm password", class:"form-input1" %>
      <br>
      <br> 
      <%= f.submit "Sign up", class:"signupform-btn" %>
    <% end %>
  </div>
  </div>
</div>

</section>
